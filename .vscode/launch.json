    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch CloudGatewayApplication",
            "request": "launch",
            "mainClass": "com.mms.cloudgateway.CloudGatewayApplication"
        },
        {
            "type": "java",
            "name": "Launch ServiceRegistryApplication",
            "request": "launch",
            "mainClass": "com.mms.serviceregistry.ServiceRegistryApplication"
        },
        {
            "type": "java",
            "name": "Launch ProductServiceApplication",
            "request": "launch",
            "mainClass": "com.mms.productservice.ProductServiceApplication",
            "projectName": ""
        },
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch OrderServiceApplication",
            "request": "launch",
            "mainClass": "com.mms.orderservice.OrderServiceApplication",
            "projectName": "order-service",
            "vmArgs": " -Dcom.sun.management.jmxremote -Dcom.sun.management.jmxremote.port=57650 -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.ssl=false -Dspring.jmx.enabled=true -Djava.rmi.server.hostname=localhost -Dspring.application.admin.enabled=true -Dspring.boot.project.name=order-service"
        },
        {
            "type": "java",
            "name": "Launch UserServiceApplication",
            "request": "launch",
            "mainClass": "com.mms.userservice.UserServiceApplication",
            "projectName": "user-service",
            "vmArgs": " -Dcom.sun.management.jmxremote -Dcom.sun.management.jmxremote.port=57781 -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.ssl=false -Dspring.jmx.enabled=true -Djava.rmi.server.hostname=localhost -Dspring.application.admin.enabled=true -Dspring.boot.project.name=user-service"
        },
        {
            "type": "java",
            "name": "Spring Boot-ProductServiceApplication<product-service>",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "com.mms.productservice.ProductServiceApplication",
            "projectName": "product-service",
            "args": "",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "type": "java",
            "name": "Spring Boot-ServiceRegistryApplication<service-registry>",
            "request": "launch",
            "cwd": "${workspaceFolder}",
